---
interface Props {
  title: string;
  id: string;
  bgColor?: string;
  textColor?: string;
}

const { title, id, bgColor = "bg-white", textColor = "text-devbulb-blue" } = Astro.props;
---

<section id={id} class={`${bgColor} py-16`}>
  <div class="container mx-auto px-4">
    <h2 class={`text-3xl font-bold ${textColor} text-center mb-12`}>{title}</h2>
    <slot />
  </div>
</section>